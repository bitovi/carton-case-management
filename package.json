{
  "name": "carton-case-management",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "docker:up": "docker compose -f docker-compose.dev.yaml up -d && docker compose -f docker-compose.dev.yaml exec app bash -c 'npm install && npm run setup && npm run dev'",
    "docker:dev": "docker compose -f docker-compose.dev.yaml exec app npm run dev",
    "docker:down": "docker compose -f docker-compose.dev.yaml down",
    "dev": "npm run dev --workspace=packages/server & npm run dev --workspace=packages/client",
    "dev:client": "npm run dev --workspace=packages/client",
    "dev:server": "npm run dev --workspace=packages/server",
    "build": "npm run build --workspaces --if-present",
    "build:client": "npm run build --workspace=packages/client",
    "build:server": "npm run build --workspace=packages/server",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "test:e2e": "npx playwright install --with-deps chromium && playwright test",
    "test:e2e:watch": "npx playwright install --with-deps chromium && playwright test --ui",
    "test:client": "npm run test --workspace=packages/client",
    "test:server": "npm run test --workspace=packages/server",
    "test:shared": "npm run test --workspace=packages/shared",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:coverage:client": "npm run test:coverage --workspace=packages/client",
    "test:coverage:server": "npm run test:coverage --workspace=packages/server",
    "test:coverage:shared": "npm run test:coverage --workspace=packages/shared",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "typecheck:client": "npm run typecheck --workspace=packages/client",
    "typecheck:server": "npm run typecheck --workspace=packages/server",
    "typecheck:shared": "npm run typecheck --workspace=packages/shared",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "setup": "npm install && npm run db:setup",
    "db:generate": "prisma generate --schema=packages/shared/prisma/schema.prisma",
    "db:push": "prisma db push --schema=packages/shared/prisma/schema.prisma",
    "db:seed": "tsx packages/server/db/seed.ts",
    "db:setup": "npm run db:push && npm run db:seed",
    "db:studio": "prisma studio --schema=packages/shared/prisma/schema.prisma",
    "storybook": "npm run storybook --workspace=packages/client",
    "build-storybook": "npm run build-storybook --workspace=packages/client",
    "figma:parse": "npm run figma:parse --workspace=packages/client",
    "figma:publish": "dotenv -- npm run figma:publish --workspace=packages/client"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@prisma/client": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^16.5.0",
    "prettier": "^3.4.2",
    "prisma": "^6.1.0",
    "typescript": "^5.7.2"
  }
}

{
  "name": "@carton/server",
  "version": "1.0.0",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "tsx watch src",
    "build": "tsc --build",
    "start": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:setup": "prisma db push --force-reset && npm run db:seed",
    "setup": "npm run db:setup"
  },
  "dependencies": {
    "@carton/shared": "*",
    "@prisma/client": "^6.1.0",
    "@trpc/server": "^11.0.0",
    "@types/cookie-parser": "^1.4.10",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.8",
    "prisma": "^6.1.0",
    "tsx": "^4.21.0",
    "vitest": "^2.1.8"
  }
}

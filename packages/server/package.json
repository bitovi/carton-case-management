{
  "name": "@carton/server",
  "version": "1.0.0",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "DATABASE_URL='file:./prisma/dev.db' node --import ./loader.mjs src/index.ts",
    "start": "DATABASE_URL='file:./prisma/dev.db' node --import ./loader.mjs src/index.ts",
    "typecheck": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint 'src/**/*.ts'",
    "db:generate": "DATABASE_URL='file:./prisma/dev.db' prisma generate",
    "db:push": "DATABASE_URL='file:./prisma/dev.db' prisma db push",
    "db:studio": "DATABASE_URL='file:./prisma/dev.db' prisma studio",
    "db:seed": "DATABASE_URL='file:./prisma/dev.db' node --import ./loader.mjs prisma/seed.ts",
    "db:setup": "npm run db:push && npm run db:seed"
  },
  "dependencies": {
    "@carton/shared": "*",
    "@prisma/client": "^6.1.0",
    "@trpc/server": "^11.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@vitest/ui": "^2.1.8",
    "prisma": "^6.1.0",
    "ts-node": "^10.9.2",
    "vitest": "^2.1.8"
  }
}